<div>
  <ul>
  <% @groups.each do |group| %>
    <li class="group-result">
      <h3><%= link_to group.name, group_path(group) %></h3>
      <p><%= group.course %></p>
      <p><%= group.size %></p>
      <%= link_to "Leave group", leave_group_user_path(group), method: :post, class: "btn btn-danger" %>
    </li>
  <% end %>
  </ul>
</div>
