<!-- Sign in !-->
<div class="container-fluid sign-in-container">
  <div class="row image-row">
    <%= image_tag "logo_with_text.png" %>
    <hr>
  </div>
  <div class="row form-row">
    <h2 style="text-align: center">Log in</h2>
    <div class="sign-in-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="email-field">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email Address"%>
        </div>

        <div class="password-field">
          <%= f.password_field :password, autocomplete: "on", class:"form-control", placeholder: "Password"%>
        </div>
        <div class="actions">
          <%= f.submit "Sign in", class:"btn btn-primary"%>
        </div>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Sign up", new_registration_path(resource_name), style: "text-align: left;" %>
        <% end -%>

        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), style: "float: right" %>
        <% end -%>
      <% end %>
    </div>
  </div>
  <div class="row bottom-row" style="text-align:center">
    <hr>
  </div>

</div>
