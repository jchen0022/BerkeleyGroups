<div class="container-fluid main-container">
  <%= form_for [@group, @task] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>

    <%= f.submit "Create Task", class: "btn btn-primary" %>
  <% end %>
</div>
